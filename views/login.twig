    {%if message %}
       <div class=" col-md-3 offset-md-4  mt-2 alert {{messageClass}}" role="alert">
         {{message}}
       </div>
    {% endif %}
<body>
    <nav class="navbar login navbar-light bg-white ">
       <h4 class="text-align" > S'identifier </h4>
        <div class="container-fluid ">
            <form method="GET" action="/products" class="d-flex">
                <input type="text" class="form-control me-2" name="email" placeholder="Entrer votre email" />
                <input type="password" class="form-control me-2" name="password" placeholder="Entrer votre mot de passe" />
                <input type="submit" value="Login"  class="btn btn-outline-dark" id="login" />
            </form>
        </div>
    </nav>
</body>
</html>